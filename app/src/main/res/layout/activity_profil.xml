<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfilActivity"
        android:background="@drawable/gradient_backround" android:id="@+id/parola_txt"
        tools:layout_editor_absoluteY="25dp">

    <TextView
            android:text="Profile Information"
            android:id="@+id/profil_txt"
            android:fontFamily="@font/caveat_brush"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toTopOf="@+id/profil_username"/>
    <TextView
            android:text="Username"
            android:id="@+id/profil_username"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_txt"
            app:layout_constraintBottom_toTopOf="@+id/profil_email" app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="E-mail"
            android:id="@+id/profil_email"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_username"
            app:layout_constraintBottom_toTopOf="@+id/profil_update" app:layout_constraintHorizontal_bias="0.33"/>
    <Button
            android:text="Update My InformatÄ±on"
            android:id="@+id/profil_update"
            android:backgroundTint="@color/splashscreen"
            android:background="@drawable/butonarkaplan"
            android:layout_width="229dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_email"
            app:layout_constraintBottom_toTopOf="@+id/profil_logout"/>
    <Button
            android:text="Log Out"
            android:id="@+id/profil_logout"
            android:backgroundTint="@color/splashscreen"
            android:background="@drawable/butonarkaplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_update"
            app:layout_constraintBottom_toTopOf="@+id/profil_delete"/>
    <Button
            android:text="Delete My Account"
            android:id="@+id/profil_delete"
            android:backgroundTint="@color/splashscreen"
            android:background="@drawable/butonarkaplan"
            android:layout_width="165dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_logout" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>